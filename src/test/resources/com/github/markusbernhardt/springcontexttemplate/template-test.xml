<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:template="http://www.github.bom/markusbernhardt/schema/context-template"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.0.xsd
		http://www.github.bom/markusbernhardt/schema/context-template
		http://www.github.bom/markusbernhardt/schema/context-template/spring-context-template.xsd">

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location"
			value="classpath:com/github/markusbernhardt/springcontexttemplate/template-test.properties" />
	</bean>

	<template:import
		resource="classpath:/com/github/markusbernhardt/springcontexttemplate/template.xml">
		<template:variable name="env" value="dev" />
	</template:import>

	<template:import
		resource="classpath:/com/github/markusbernhardt/springcontexttemplate/template.xml"
		name="env" value="test" />

</beans>